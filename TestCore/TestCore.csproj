name: MAUI Unit Tests

on:
  push:
    branches:
      - main
      - infra/runner-toevoegen
  pull_request:
    branches:
      - main

jobs:
  test:
    runs-on: windows-latest  # MAUI tests werken meestal stabieler op Windows
    steps:
      # 1. Haal de repository op
      - name: Haal de repository op
        uses: actions/checkout@v4

      # 2. Toon de directory structuur voor debugging
      - name: Toon directory structuur
        run: dir /s

      # 3. Installeer .NET SDK
      - name: Installeer .NET SDK
        uses: actions/setup-dotnet@v3
        with:
          dotnet-version: '8.0.x'  # Pas aan indien nodig

      # 4. Installeer MAUI workloads (alleen nodig voor platform-specifieke builds)
      - name: Installeer MAUI workloads
        run: dotnet workload install maui-android

